{
    "@context": "dtmi:dtdl:context;2",
    "@id": "dtmi:digitaltwins:isa95:WorkResponse;1",
    "@type": "Interface",
    "displayName": "Work response",
    "description": "The responses from manufacturing that are associated with a work request shall be defined as work responses.",
    "comment": "According to ANSI/ISA-95.00.04-2018 Enterprise-Control System Integration âˆ’ Part 4: Objects and Attributes for - Approved 24 May 2018",
    "extends": ["dtmi:digitaltwins:isa95:BaseModel;1"],
    "contents": [
        {
            "@type": "Relationship",
            "name": "isMadeUpOfResponse",
            "displayName": "Is made up of",
            "description": "The related object(s), work response, makes up part of this work response as the whole.",
            "target": "dtmi:digitaltwins:isa95:WorkResponse;1"
        },
        {
            "@type": "Relationship",
            "name": "isMadeUpOfJob",
            "displayName": "Is made up of",
            "description": "The job response(s) that make up this work response.",
            "target": "dtmi:digitaltwins:isa95:JobResponse;1"
        },
        {
            "@type": "Relationship",
            "name": "correspondsTo",
            "displayName": "Corresponds to",
            "description": "An identification of the associated work request.",
            "target": "dtmi:digitaltwins:isa95:WorkRequest;1"
        },
        {
            "@type": "Property",
            "name": "workType",
            "displayName": "Work type",
            "writable": true,
            "description": "Describes the category of work.",
            "schema": {
                "@type": "Enum",
                "valueSchema": "string",
                "enumValues": [
                    {
                        "name": "production",
                        "enumValue": "production"
                    },
                    {
                        "name": "maintenance",
                        "enumValue": "maintenance"
                    },
                    {
                        "name": "quality",
                        "enumValue": "quality"
                    },
                    {
                        "name": "inventory",
                        "enumValue": "inventory"
                    },
                    {
                        "name": "mixed",
                        "enumValue": "mixed",
                        "comment": " can be used when the activity contains several categories"
                    }
                ]
            }
        },
        {
            "@type": "Property",
            "name": "startTime",
            "displayName": "Start Time",
            "description": "The starting time of this work response.",
            "schema": "dateTime",
            "writable": true
        },
        {
            "@type": "Property",
            "name": "endTime",
            "displayName": "End Time",
            "description": "The ending time of this work response.",
            "schema": "dateTime",
            "writable": true
        },
        {
            "@type": "Property",
            "name": "hierarchyScope",
            "displayName": "Hierarchy scope",
            "description": "Identifies where the exchanged information fits within the role based equipment hierarchy. Optionally, hierarchy scope defines the scope of the equipment class, such as the site or area where it is defined.",
            "schema": "string"
        },
        {
            "@type": "Relationship",
            "name": "hierarchyScopeRel",
            "displayName": "fits hierarchy scope",
            "description": "Optional relationship to hierarchy.",
            "comment": "Not part of the Standard Specs.",
            "target": "dtmi:digitaltwins:isa95:HierarchyScope;1",
            "maxMultiplicity": 1
        },
        {
            "@type": "Property",
            "name": "responseState",
            "displayName": "Response state",
            "description": "Indicates the state of the work response.",
            "schema": {
                "@type": "Enum",
                "valueSchema": "string",
                "enumValues": [
                    {
                        "name": "waiting",
                        "enumValue": "waiting"
                    },
                    {
                        "name": "ready",
                        "enumValue": "ready"
                    },
                    {
                        "name": "running",
                        "enumValue": "running"
                    },
                    {
                        "name": "completed",
                        "enumValue": "completed"
                    },
                    {
                        "name": "aborted",
                        "enumValue": "aborted"
                    },
                    {
                        "name": "held",
                        "enumValue": "held"
                    },
                    {
                        "name": "suspended",
                        "enumValue": "suspended"
                    },
                    {
                        "name": "closed",
                        "enumValue": "closed"
                    }
                ]
            },
            "writable": true
        }
   ]
}