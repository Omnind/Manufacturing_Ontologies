                    },
                    {
                        "name": "maintenance",
                        "displayName": "Maintenance",
                        "enumValue": "maintenance"
                    },
                    {
                        "name": "mixed",
                        "displayName": "Mixed",
                        "enumValue": "mixed",
                        "comment": "Mixed can be used when the operations event does not refer to a specific operations activity or refers to several operation activities"
                    }
                ]
            }
        },
        {
            "@type": "Property",
            "name": "momFunction",
